<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

<!--    TODO: Add custom font by replacing files in 'font' folder in 'res' directory and changing filename below accordingly-->
    <style name="AppTheme.Text.Small" parent="TextAppearance.AppCompat.Small">
        <item name="android:fontFamily">@font/helvetica</item>
    </style>

    <style name="AppTheme.Text.Small.Bold" parent="TextAppearance.AppCompat.Small">
        <item name="android:fontFamily">@font/helvetica_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Text.Medium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/helvetica</item>
    </style>

    <style name="AppTheme.Text.Medium.Bold" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/helvetica_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Text.Large" parent="TextAppearance.AppCompat.Large">
        <item name="android:fontFamily">@font/helvetica</item>
    </style>

    <style name="AppTheme.Text.Large.Bold" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/helvetica_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextTitleStyle">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="AlertDialogStyle" parent="Base.Theme.MaterialComponents.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowTitleStyle">@style/TextTitleStyle</item>
    </style>

</resources>
